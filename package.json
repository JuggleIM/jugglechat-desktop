{
  "name": "jugglechat-desktop",
  "version": "1.0.0",
  "description": "",
  "main": "./src/main/main.js",
  "scripts": {
    "dev": "electron . http://localhost:5173",
    "build": "electron-builder"
  },
  "keywords": [
    "JuggleChat",
    "IM",
    "Chat"
  ],
  "author": "xiaoshan",
  "license": "MIT",
  "devDependencies": {
    "@electron/fuses": "^1.8.0",
    "electron": "29.1.0",
    "electron-builder": "^25.1.7"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "jugglechat-electron": "^1.7.4"
  },
  "build": {
    "productName": "JuggleChat",
    "copyright": "Copyright JuggleIM",
    "appId": "org.erb.jugglechat",
    "asar": true,
    "asarUnpack": "**\\*.{node,dll}",
    "files": [
      "src",
      "node_modules",
      "package.json"
    ],
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./build/icons/aaa.ico",
      "uninstallerIcon": "./build/icons/bbb.ico",
      "installerHeaderIcon": "./build/icons/aaa.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "JuggleChat",
      "include": "build/script/installer.nsh"
    },
    "publish": [
      {
        "provider": "generic",
        "url": ""
      }
    ],
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "src/assets/icon/icon.icns"
    },
    "win": {
      "icon": "",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32"
          ]
        }
      ]
    },
    "extraResources": [
      "./assets/**"
    ]
  }
}
